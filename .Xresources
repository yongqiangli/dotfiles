!! xrdb ~/.Xresources

!! xterm configure
xterm*termName: xterm-256color
xterm*preeditType:Root
xterm*locale: true
xterm*utf8:true
xterm*utf8Title:true
xterm*fontMenu*fontdefault*Label:Default
xterm*faceName: DejaVu Sans Mono:antialias=true:pixelsize=16
xterm*faceNameDoublesize: WenQuanYi Micro Hei Mono:antialias=true:pixelsize=16
xterm*xftAntialias:true
xterm*cjkWidth:false
xterm*cursorBlink: true
xterm*colorUL: blue
xterm*colorBD: white
xterm*saveLines: 4096
xterm*metaSendsEscape:true
xterm*inputMethod: fcitx

xterm*foreground: grey
xterm*background: black
xterm*color0: #000000
xterm*color1: #CC0000
xterm*color2: #4E9A06
xterm*color3: #C4A000
xterm*color4: #3465A4
xterm*color5: #75507B
xterm*color6: #06989A
xterm*color7: #D3D7CF
xterm*color8: #555753
xterm*color9: #EF2929
xterm*color10: #8AE234
xterm*color11: #FCE94F
xterm*color12: #729FCF
xterm*color13: #AD7FA8
xterm*color14: #34E2E2
xterm*color15: #EEEEEC

!! mouse selection to copy, Ctrl-V to paste
!! Ctrl p to print screen content to file
xterm*VT100.Translations: #override \
      <Btn1Up>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
      Ctrl <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
      Ctrl <KeyPress> P: print() \n

!! emacs window size
Emacs.geometry:80x40+0+0
